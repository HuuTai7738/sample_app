<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user,
                           size: Settings.avatar_post_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= t "posted" %>
    <%= time_ago_in_words(micropost.created_at) %>
    <%= t "ago" %>
    <% if current_user? micropost.user %>
      <%= button_to t("delete"), micropost, method: :delete %>
    <% end %>
  </span>
</li>
